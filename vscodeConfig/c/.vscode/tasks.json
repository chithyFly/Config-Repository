{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile multiplied c files",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${fileDirname}/*.c", 
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall", 
                "-static-libgcc",   
                "-fexec-charset=UTF-8",
                "-std=c11"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ]
}
